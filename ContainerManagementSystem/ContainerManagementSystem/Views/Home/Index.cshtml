@model ContainerManagementSystem.Models.LogInModel

@{
	ViewBag.Title = "Index";
}
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="Login">
	<div class="col-sm-12" align="center">
		<h3 style=" color:black"><b>Login </b></h3>
		<hr />
		<div class="form-group col-sm-12">
			<label>Username</label>
			<input type="text" id="Username" class="form-control" placeholder="Enter Username">
		</div>

		<div class="form-group col-sm-12">
			<label>Password</label>
			<input type="password" id="Password" class="form-control" placeholder="Enter Password">
		</div>


		<div class="form-group col-sm-12">
			<div>
				<input type="submit" class="btn btn-primary btn-block" value="Login" onclick="GetDetailById();" style="width:150px;">
				
			</div>
		</div>
	</div>
</div>



<style>

	.sign-up {
		box-shadow: 0px 0px 10px 1px grey;
		border-radius: 15px;
		padding-bottom: 20px;
		background: white;
	}

	.title {
		background: #007bbf;
		padding: 10px;
		text-align: center;
		color: #fff;
		border-radius: 0px 0px 10px 10px;
	}
</style>


@section Scripts{


	<script type="text/javascript">


		function GetDetailById(Username, Password) {
			var Username = $("#Username").val();
			var Password = $("#Password").val();
			$.get("/Home/LogIn?Username=" + Username + "&Password=" + Password, function (data, status) {
				if (Username == data.Username && Password == data.Password) {
					var ID = data.UserID;

					var url = "/UserHome?ID=" + (ID);
					
					window.location.href = url;
					alert('Successfully login');
				}

				else if (Username == "Admin" && Password == "Admin") {
					var url = "/AdminHome";
					window.location.href = url;
					alert('Successfully login');
				}
				else {

					alert('Invalid Username or password');
				}


			});
		}
	</script>

	
}

